<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParentFragment">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textSize="18dp"
        android:textColor="#000000"
        android:paddingTop="100dp"
        android:paddingLeft="85dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_marginTop="-1dp"
        android:hint="Enter mobile number"
        android:paddingTop="20dp"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:backgroundTint="#1A237E" />


    <Button
        android:id="@+id/btn"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_below="@id/et1"
        android:layout_centerInParent="true"
        android:text="REGISTER"
        android:background="#E57373"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn"
        android:text="IMPORTANT: You must provide the module"
        android:textSize="12dp"
        android:paddingLeft="85dp"
        android:paddingTop="20dp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:text="number registered with the institute."
        android:textSize="12dp"
        android:paddingLeft="85dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv3"
        android:paddingTop="20dp"
        android:text="Registering with the app will enable "
        android:paddingLeft="85dp"
        android:textSize="15dp"
        android:textColor="#4a148c"/>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv4"
        android:text="you to receive personal information"
        android:paddingLeft="85dp"
        android:textSize="15dp"
        android:textColor="#4a148c"/>

    <TextView
        android:id="@+id/tv6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv5"
        android:text="/ messages. "
        android:paddingLeft="85dp"
        android:textSize="15dp"
        android:textColor="#4a148c"/>



</RelativeLayout>